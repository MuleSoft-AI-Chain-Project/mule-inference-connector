			</munit:parameterization>
			<munit:parameterization name="config-xinference" >
				<munit:parameters >
					<munit:parameter propertyName="config" value="XinferenceConfig" />
					<munit:parameter propertyName="llmModel" value="${xinference.llmModel}" />
