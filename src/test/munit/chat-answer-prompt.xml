		</munit:parameterizations>
	</munit:config>

	<munit:test doc:id="e2c98b32-b218-4034-a8b1-b589bd31fe08" name="chat_answer_prompt_operation-Test">
		<munit:execution>
			<flow-ref doc:id="220c5a75-4bba-4950-827a-dbd1e06c97f9" doc:name="Flow-ref to chat_completion_operation" name="chat_answer_prompt_operation"/>
			<logger level="INFO" message="#[payload]"/>
		</munit:execution>
		<munit:validation>
			<munit-tools:assert-that doc:name="payload.response" doc:id="cf2534ac-1293-4fc0-a2e4-d3f22f81b2b9" message="Payload response is wrong answer" expression="#[payload.payload.response]" is="#[MunitTools::containsString('Berlin')]" />
			<munit-tools:assert-equals doc:name="Input Token" doc:id="f4b0e12f-ab0c-4908-9709-9959cde938bc" actual="#[attributes.tokenUsage.inputCount as String]" expected="${inputCount}" message="Incorrect Input Token" />
			<munit-tools:assert-equals doc:name="model Info" doc:id="85319d09-a49c-45c4-a018-7861669b0d69" actual="#[attributes.additionalAttributes.model]" expected="${llmModel}" message="Incorrect Model Info" />
		</munit:validation>
	</munit:test>

	<sub-flow name="chat_answer_prompt_operation" doc:id="0275c6a1-b3f0-4014-a88b-be61f2918af2">
		<set-variable value='#[%dw 2.0&#10;			output application/json&#10;			---&#10;			{&#10;			    "prompt": "What is the capital of Germany?"&#10;			}]' doc:name="Set Variable" doc:id="77ffc86b-cc5b-4a58-ace0-00338c576397" variableName="testPayload"/>
		<mac-inference:chat-answer-prompt doc:name="[CHAT] Answer Prompt" doc:id="c3a7d794-1c95-4844-b6ef-430b122a1e54" config-ref="${config}">
			<mac-inference:prompt ><![CDATA[#[vars.testPayload.prompt]]]></mac-inference:prompt>
		</mac-inference:chat-answer-prompt>
		<ee:transform doc:name="Transform Message" doc:id="8c4b1d65-92cd-4a35-82db-db8a25877fd7" >
			<ee:message >
				<ee:set-payload ><![CDATA[%dw 2.0
					output application/json
					---
					{
						payload: payload,
						attributes: attributes
					}]]></ee:set-payload>
			</ee:message>
		</ee:transform>
	</sub-flow>
</mule>